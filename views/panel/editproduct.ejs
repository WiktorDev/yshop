<%- include('../includes/sidebar'); -%>
<main style="margin-top: 58px">
  <div class="container pt-4">
    <br>
    <section>
      <div class="row">
        <div class="mdb-page-content text-center">
            <div class="text-center py-5">
              <div class="col-lg-11">
                <div class="card card-primary card-outline card-tabs">
                    <div class="card-header p-0 pt-1 border-bottom-0">
                        <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#custom-tabs-three-home" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">Produkt</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content" id="custom-tabs-three-tabContent">
                            <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                                <form method="post" action="">
                                    <input type="hidden" name="_token" value="EAO7h1nZi71a9QmMAgG37jmkhe8xuRuKUFmQF6Wf">                        <div class="row">
                                        <div class="col-lg-6">
                                            <div class="card h-100">
                                                <div class="card-header custom-card-header">
                                                    <h3 class="card-title">Produkt</h3>
                                                </div>
                                                <div class="tab-pane" id="tab_1">
                                                    <div class="row">
                                                    <div class="col-lg-8">
                                                        <form action="" method="post">
                                                       <label>Nazwa</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">$</span>
                                                            </div>
                                                            <% rows2.forEach(function(rows2) { %>
                                                                <input type="text" class="form-control" name="product_name" value="<%= rows2.name %>">
                                                            <% }); %>
                                                        </div>
                                                        <label>Cena</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">$</span>
                                                            </div>
                                                            <% rows2.forEach(function(rows2) { %>
                                                                <input type="number" class="form-control" name="product_price" value="<%= rows2.price %>">
                                                            <% }); %>
                                                        </div>
                                                        <br>
                                                        <label>Zdjecie</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">$</span>
                                                            </div>
                                                            <% rows2.forEach(function(rows2) { %>
                                                                <input type="url" class="form-control" name="product_img" value="<%= rows2.image %>">
                                                            <% }); %>
                                                        </div>
                                                        <br>
                                                        <label>Opis</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">$</span>
                                                            </div>
                                                            <% rows2.forEach(function(rows2) { %>
                                                                <input type="text" class="form-control" name="product_lore" value="<%= rows2.lore %>">
                                                            <% }); %>
                                                        </div>
                                                        <br>
                                                        <label>Suwak</label>
                                                        <div class="input-group">
                                                            <div class="input-group-prepend">
                                                            </div>
                                                            <% rows2.forEach(function(rows2) { %>
                                                              <div class="form-outline mb-4">
                                                                      <% if(rows2.type == 'suwak'){ %>
                                                                      <select name="product_type" id="type" class="btn btn-success">
                                                                          <option value="suwak">on</option>
                                                                          <option value="bezsuw">off</option>
                                                                      </select>
                                                                      <% } else  { %>
                                                                      <select name="product_type" id="type" class="btn btn-danger">
                                                                          <option value="bezsuw">off</option>
                                                                          <option value="suwak">on</option>
                                                                      </select>
                                                                      <% } %>    
                                                              </div>
                                                            <% }); %>
                                                        </div>
                                                        <% rows2.forEach(function(rows2) { %>
                                                        <% if(rows2.type == 'suwak'){ %>
                                                          <label>Minimalna ilość</label>
                                                          <div class="input-group">
                                                              <div class="input-group-prepend">
                                                                  <span class="input-group-text">$</span>
                                                              </div>
                                                              <input type="number" class="form-control" name="product_min" value="<%= rows2.mincount %>">
                                                          </div>
                                                          <label>Maksymalna ilość</label>
                                                          <div class="input-group">
                                                              <div class="input-group-prepend">
                                                                  <span class="input-group-text">$</span>
                                                              </div>
                                                              <input type="number" class="form-control" name="product_max" value="<%= rows2.maxcount %>">
                                                          </div>
                                                         <% } %>   
                                                      <% }); %>
                                                        <br>
                                                        </form>
                                                    </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="card h-100">
                                                <div class="card-header custom-card-header">
                                                    <h3 class="card-title">Komendy</h3>
                                                </div>
                                                <div class="card-body">
                                                    <br>
                                                    <% rows2.forEach(function(rows2) { %>
                                                      <% if(rows2.type == 'suwak') { %>
                                                          <p>Zmienne do komend: {player} - nick gracza , {count} - ilosc z suwaka</p>
                                                      <% } else { %>
                                                          <p>Zmienne do komend: {player} - nick gracza</p>    
                                                      <% } %>    
                                                    <br>
                                                    <div class="input-group">
                                                        <div class="input-group-prepend">
                                                            <span class="input-group-text">$</span>
                                                        </div>
                                                            <input type="text" class="form-control" name="rcon_port" value="<%= rows2.cmd %>">
                                                        <% }); %>
                                                    </div>
                                                    <br>
                                                    <p>Zalecamy do skorzystania z naszego pluginu dzieki ktoremu mozesz tworzyc pakiety uslug</p>
                                                    <button class="btn btn-primary">Pobierz</button>
                                                </div>  
                                            </div>
                                        </div>
                                        <div class="col-lg-12 text-center">
                                            <div class="card-body">
                                                <div class="text-center">
                                                    <a class="txt2" href="#">	
                                                      <%- captcha %>
                                                    </a>
                                                  </div>
                                                <div class="form-group">
                                                    <input class="btn btn-primary" type="submit" value="Aktualizuj">
                                                </div>
                                            </div>
                                          </div>
                                    </div>
                                </form>                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          </div>
      </div>
    </section>
  </div>
</main>
<%- include('../includes/footer'); -%>
</body>
</html>