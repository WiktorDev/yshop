<%- include('includes/sidebar'); -%>
    <script>
      var notyf = new Notyf();
  </script>
  <% if (messages.error) { %>
    <script>
      notyf.error({
          message: '<%- messages.error %>',
          dismissible: true,
          position: {
            x: 'right',
            y: 'top',
          },
      }) 
      </script>
    <% } %>
  
  
    <% if (messages.success) { %>
      <script>
        notyf.success({
            message: '<%- messages.success %>',
            dismissible: true,
            position: {
              x: 'right',
              y: 'top',
            },
        }) 
        </script>
      <% } %>
    <div class="mdb-page-content text-center page-intro bg-light">
      <div class="text-center py-5">
        <div class="card" style="width: 50rem; margin-left: 12cm; margin-top: 4cm;">
            <div class="card-body">
              <table class="table" >
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nazwa</th>
                    <th scope="col">ID</th>
                    <th scope="col">Cena</th>
                    <th scope="col">Ilość zakupów</th>
                    <th scope="col">Suwak</th>
                    <th scope="col">Usuń</th>
                    <th scope="col">Akcja</th>
                  </tr>
                </thead>
                <tbody>
                  <% rows.forEach(function(rows) { %>
                    <tr>
                      <td><img src="<%= rows.image %>" alt="" width="50px"></td>
                      <td><%= rows.name %></td>
                      <td><%= rows.pid %></td>
                      <td><%= rows.price %>zł</td>
                      <td>0</td>
                      <% if(rows.type == 'suwak'){ %>
                        <td><span class="badge bg-success">ON</span></td>
                      <% } else { %>
                        <td><span class="badge bg-danger">OFF</span></td>
                      <% } %>
                      <td><button class="btn btn-danger"><i class="fas fa-trash"></i></button> </td>
                      <td><a href="/panel/manage/<%= id %>/editproduct/<%= rows.pid %>" class="btn btn-primary">Edytuj</a></td>
                    </tr>
                <% }); %>
                </tbody>
              </table>
            </div>
        <button id="toggler"class="btn btn-dark mt-5" data-toggle="sidenav"data-target="#full-screen-example">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    <script type="text/javascript" src="https://mdbootstrap.com/previews/mdb-ui-kit/sidenav/js/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
  </body>
</html>