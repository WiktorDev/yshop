<%- include('includes/sidebar'); -%>
    <script>
      var notyf = new Notyf();
  </script>
  <% if (messages.error) { %>
    <script>
      notyf.error({
          message: '<%- messages.error %>',
          dismissible: true,
          position: {
            x: 'right',
            y: 'top',
          },
      }) 
      </script>
    <% } %>
    <% if (messages.success) { %>
      <script>
        notyf.success({
            message: '<%- messages.success %>',
            dismissible: true,
            position: {
              x: 'right',
              y: 'top',
            },
        }) 
        </script>
      <% } %>
    <div class="mdb-page-content text-center page-intro bg-light">
      <div class="text-center py-5">
        <div class="card" style="width: 50rem; margin-left: 12cm; margin-top: 4cm;">
            <div class="card-body">
              <table class="table" >
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Usluga</th>
                    <th scope="col">Nick</th>
                    <th scope="col">Zaplacone</th>
                    <th scope="col">Data</th>
                  </tr>
                </thead>
                <tbody>
                  <% rows.forEach(function(rows) { %>
                    <tr>
                      <td>1</td>
                      <td><%= rows.product %></td>
                      <td><%= rows.nick %></td>
                      <% if(rows.paid == 'false') {%>
                        <td><span class="badge bg-danger">Nie</span></td>
                      <% } else { %>  
                      <td><span class="badge bg-success">Tak</span></td>
                      <% } %>
                      <td><% var txt = rows.data %><% var timestamp = moment.unix(txt.substring(0, txt.length - 3)) %><%- timestamp.locale("pl").format('lll') %></td>
                    </tr>
                <% }); %>
                </tbody>
              </table>
            </div>
        <button id="toggler"class="btn btn-dark mt-5"data-toggle="sidenav"data-target="#full-screen-example">
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    <script type="text/javascript" src="https://mdbootstrap.com/previews/mdb-ui-kit/sidenav/js/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
  </body>
</html>
