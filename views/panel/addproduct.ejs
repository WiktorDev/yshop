<%- include('includes/sidebar'); -%>
    <script>
      var notyf = new Notyf();
  </script>
  <% if (messages.error) { %>
    <script>
      notyf.error({
          message: '<%- messages.error %>',
          dismissible: true,
          position: {
            x: 'right',
            y: 'top',
          },
      }) 
      </script>
    <% } %>
    <% if (messages.success) { %>
      <script>
        notyf.success({
            message: '<%- messages.success %>',
            dismissible: true,
            position: {
              x: 'right',
              y: 'top',
            },
        }) 
        </script>
      <% } %>
    <div class="mdb-page-content text-center page-intro bg-light" >
      <div class="text-center py-5" style="margin-right: 4cm; margin-left: 4cm; ">
          <form action="/panel/manage/<%= id %>/addproduct" method="post" >
            <div class="form-outline mb-4">
              <input type="text" id="form1Example1" class="form-control" name="name" required/>
              <label class="form-label" for="form1Example1">Nazwa uslugi</label>
            </div>
            <div class="form-outline mb-4">
                <input type="number" id="form1Example1" class="form-control" name="price" required/>
                <label class="form-label" for="form1Example1">Cena</label>
              </div>
              <div class="form-outline mb-4">
                <input type="url" id="form1Example1" class="form-control" name="image" required />
                <label class="form-label" for="form1Example1">URL zdjecia</label>
              </div>
              <div class="form-outline mb-4">
                <input type="text" id="form1Example1" class="form-control" name="lore" required/>
                <label class="form-label" for="form1Example1">Opis</label>
              </div>
              <div class="form-outline mb-4">
                <input type="text" id="form1Example1" class="form-control" name="cmd" required />
                <label class="form-label" for="form1Example1">Komenda</label>
              </div>
              <div class="form-outline mb-4">
                <label for="type">Wybierz typ:</label>
                <select name="type" id="type">
                  <option value="suwak">z suwakiem</option>
                  <option value="bezsuw">bez suwaka</option>

                </select>

              </div>

        
            <button type="submit" class="btn btn-primary btn-block">Dodaj produkt</button>
        </form>
        <button
          id="toggler"
          class="btn btn-dark mt-5"
          data-toggle="sidenav"
          data-target="#full-screen-example"
        >
          <i class="fas fa-bars"></i>
        </button>
      </div>
    </div>
    <script type="text/javascript" src="https://mdbootstrap.com/previews/mdb-ui-kit/sidenav/js/mdb.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>
  </body>
</html>