<main style="margin-top: 58px">
  <div class="container pt-4">
    <br>
    <section>
      <div class="row">
        <div class="mdb-page-content text-center">
          <div class="text-center py-5">
            <div class="col-lg-11">
              <div class="card card-primary card-outline card-tabs">
                  <div class="card-header p-0 pt-1 border-bottom-0">
                      <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                          <li class="nav-item">
                              <a class="nav-link active" id="custom-tabs-three-home-tab" data-toggle="pill" href="#custom-tabs-three-home" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">Nawigacja</a>
                          </li>
                      </ul>
                  </div>
                  <div class="card-body">
                      <div class="tab-content" id="custom-tabs-three-tabContent">
                          <div class="tab-pane fade show active" id="custom-tabs-three-home" role="tabpanel" aria-labelledby="custom-tabs-three-home-tab">
                              <form method="post" action="">
                                  <input type="hidden" name="_token" value="EAO7h1nZi71a9QmMAgG37jmkhe8xuRuKUFmQF6Wf">                        
                                  <div class="row">
                                      <div class="col-lg-6">
                                          <div class="card h-100">
                                              <div class="card-header custom-card-header">
                                                  <h3 class="card-title">Nawigacja</h3>
                                              </div>
                                              <div class="tab-pane" id="tab_1">
                                                  <div class="row">
                                                  <div class="col-lg-8">
                                                      <form action="" method="post">
                                                          <input type="hidden" name="_token" value="EAO7h1nZi71a9QmMAgG37jmkhe8xuRuKUFmQF6Wf">                                <input type="hidden" value="37" name="id">
                                                      <label>Nazwa</label>
                                                      <div class="input-group">
                                                          <div class="input-group-prepend">
                                                              <span class="input-group-text">$</span>
                                                          </div>
                                                            <input type="text" id="name" class="form-control" name="name" required />
                                                      </div>
                                                      <br>
                                                      <label>URL</label>
                                                      <div class="input-group">
                                                          <div class="input-group-prepend">
                                                              <span class="input-group-text">$</span>
                                                          </div>
                                                          <input type="text" id="url" class="form-control" name="url" required />
                                                      </div>
                                                      <br>
                                                      <div class="text-center">
                                                        <a class="txt2" href="#">	
                                                          <%- captcha %>
                                                        </a>
                                                      </div>
                                                      <button type="submit" class="btn btn-success">Dodaj</button>
                                                      </form>
                                                  </div>
                                                  </div>
                                              </div>
                                          </div>
                                      </div>
                                      <div class="col-lg-6">
                                          <div class="card h-100">
                                              <div class="card-header custom-card-header">
                                                  <h3 class="card-title">Lista</h3>
                                              </div>
                                              <div class="card-body">
                                                  
                                                    <table class="table">
                                                        <thead>
                                                          <tr>
                                                            <th scope="col">ID</th>
                                                            <th scope="col">Nazwa</th>
                                                            <th scope="col">URL</th>
                                                            <th scope="col">Akcja</th>
                                                          </tr>
                                                        </thead>
                                                        <tbody>
                                                            <% url.forEach(function(url) { %>
                                                                <form action="delete/<%= url.urlid %>" method="POST">
                                                          <tr>
                                                            <td><%= url.urlid %></td>
                                                            <td><%= url.name %></td>
                                                            <td><%= url.url %></td>
                                                            <td><button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i></button></td>
                                                          </tr>
                                                        </form>
                                                          <% }); %>
                                                        </tbody>
                                                      </table>
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </form>                
                          </div>
                      </div>
                  </div>
              </div>
          </div>
        </div>
      </div>
    </section>
  </div>
